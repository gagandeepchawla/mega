{% extends 'layout.jinja2' %}
{% block subtitle  %}Add Post - {% endblock %}
{% block content %}
<p>
 <strong> Add Post</strong>
</p>
<form action="/storepost" method="POST">
    <input type="hidden" name="user_id" value="{{user_id}}">
    <div class="form-group">
        PostName <input type="Text" name="post_name" placeholder="Enter the Post Name">
  </div>
  <div class="form-group">
    <textarea class="form-control" name="textarea" rows="10" cols="60" placeholder="Enter the content"></textarea>
</div>
<div class="form-group">
    <button type="submit" name="submit" value="Add Post" class="btn btn-default">Add Post</button>
</div>
</form>
{% endblock %}